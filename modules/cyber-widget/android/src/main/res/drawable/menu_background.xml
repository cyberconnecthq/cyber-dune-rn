<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0FFE0" /> <!-- Outer Light Green -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#00FF00" /> <!-- Middle Green -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#008000" /> <!-- Inner Dark Green -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:left="15dp" android:right="15dp" android:top="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#F0FFF0" /> <!-- Innermost White -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
